<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="vertical" 
 android:layout_width="fill_parent"
 android:background="@color/white"
 android:layout_height="fill_parent">
 
    <!--  HEADER BAR LAYOUT  -->
    
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:orientation="horizontal"
        android:background="@color/lightGray" >
        
     <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

     <ImageView
         	android:id="@+id/imageLogo"
            android:layout_width="50sp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:src="@drawable/american_corner_logo_icon" />
     
        <TextView
            android:id="@+id/americanCornersText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="American Corners"
            android:textColor="@color/darkBlue"
            android:textSize="22sp"
            android:layout_toRightOf="@id/imageLogo"/>

        <Spinner
	        android:id="@+id/spinnerMenu"
	        android:layout_width="30sp"
	        android:layout_height="30sp"
	        android:layout_gravity="center"
	        android:text=""
	        android:layout_marginRight="15sp"
	        android:background="@drawable/menu_icon"
	        android:layout_alignParentRight="true"
	         />
        
        </RelativeLayout>

    </LinearLayout>
    
  <!--  WHITE HORIZONTAL BAR BELOW HEADER -->
    
    <View
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="@color/buttonGray"/>   

 	<View
	    android:layout_width="fill_parent"
	    android:layout_height="12dp"
	    android:background="@color/white"/>  

 <!--  Dashboard Layout  -->
 
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
     
     <LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="0dp"
	     android:layout_weight="12"
	     android:background="@color/lightBackGray"
	     android:orientation="horizontal">

    	<ScrollView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			
    	    <LinearLayout 
    	        android:layout_width="fill_parent"
    	        android:layout_height="fill_parent"
    	        android:orientation="vertical">
    	        
    	        <ImageView
    	            android:layout_width="fill_parent"
    	            android:layout_height="wrap_content"
    	            android:background="@drawable/magical_books"
    	            android:layout_marginBottom="10sp"
    	            />
			
	    	    <!-- "On Loan" Card -->
	
	    	    <LinearLayout
	    	        android:layout_width="fill_parent"
	    	        android:layout_height="200sp"
	    	        android:layout_marginTop="10sp"
	    	        android:orientation="vertical">
	    	        
	    	        <LinearLayout
		    	        android:layout_width="fill_parent"
		    	        android:layout_height="fill_parent"
		    	        android:weightSum="100"
		    	        android:orientation="horizontal">
		    	        
		    	        <RelativeLayout
				            android:layout_width="0dp"
				            android:layout_height="fill_parent"
				            android:layout_weight="5" />
		    	        
		    	        <RelativeLayout
				            android:layout_width="0dp"
				            android:layout_height="fill_parent"
				            android:layout_weight="90"
				            android:background="@color/white">
				            
		    	            <LinearLayout
				    	        android:layout_width="fill_parent"
				    	        android:layout_height="fill_parent"
				    	        android:orientation="vertical"
				    	        android:gravity="center_vertical">
				    	        
		    	                <Button
		    	                    android:id="@+id/btnItemsOnLoanCurrently"
		    	                    android:layout_width="fill_parent"
				    	        	android:layout_height="40sp"
				    	        	android:gravity="left"
					            	android:textSize="27sp"
				    	        	android:text="  Currently"
				    	        	android:background="@color/white"
				    	        	android:textColor="@color/darkGray"/>
				            
			    	            <Button
			    	                android:id="@+id/btnItemsOnLoan"
			    	                android:layout_width="fill_parent"
					            	android:layout_height="35sp"
					            	android:gravity="left"
					            	android:textSize="22sp"
					            	android:text="     Items on Loan: 5"
					            	android:background="@color/white"
				    	        	android:textColor="@color/darkGray"
			    	                />
			    	            
			    	            <Button
			    	                android:id="@+id/btnItemsOverdue"
			    	                android:layout_width="fill_parent"
					            	android:layout_height="35sp"
					            	android:gravity="left"
					            	android:textSize="22sp"
					            	android:text="     Items Overdue: 3"
					            	android:background="@color/white"
				    	        	android:textColor="@color/red1"
			    	                />
			    	            
			    	            <Button
			    	                android:id="@+id/btnReturnItem"
			    	                android:layout_width="fill_parent"
					            	android:layout_height="35sp"
					            	android:layout_marginTop="15sp"
					            	android:layout_marginBottom="15sp"
					            	android:gravity="center"
					            	android:textSize="22sp"
					            	android:text="Return Item"
					            	android:background="@color/white"
			    	                />
		    	            
		    	            </LinearLayout>
		    	            
				        </RelativeLayout>
		    	        
		    	        <RelativeLayout
				            android:layout_width="0dp"
				            android:layout_height="fill_parent"
				            android:layout_weight="5" />
	    	        
	    	        </LinearLayout>
	    	        
	    	    </LinearLayout>
	    	    
	    	    
	    	    <!-- "Membership" Card -->
	
	    	    <LinearLayout
	    	        android:layout_width="fill_parent"
	    	        android:layout_height="130sp"
	    	        android:layout_marginTop="20sp"
	    	        android:orientation="vertical">
	    	        
	    	        <LinearLayout
		    	        android:layout_width="fill_parent"
		    	        android:layout_height="fill_parent"
		    	        android:weightSum="100"
		    	        android:orientation="horizontal">
		    	        
		    	        <RelativeLayout
				            android:layout_width="0dp"
				            android:layout_height="fill_parent"
				            android:layout_weight="5" />
		    	        
		    	        <RelativeLayout
				            android:layout_width="0dp"
				            android:layout_height="130sp"
				            android:background="@color/white"
				            android:layout_weight="90">
				            
		    	            <LinearLayout
				    	        android:layout_width="fill_parent"
				    	        android:layout_height="fill_parent"
				    	        android:orientation="vertical">
				    	        
		    	                <TextView 
		    	                    android:layout_width="fill_parent"
				    	        	android:layout_height="40sp"
				    	        	android:gravity="left"
					            	android:textSize="27sp"
				    	        	android:text="  Membership"
				    	        	android:background="@color/white"
				    	        	android:textColor="@color/darkGray"/>
				            
			    	            <Button
			    	                android:id="@+id/btnNumMembers"
			    	                android:layout_width="fill_parent"
					            	android:layout_height="fill_parent"
					            	android:gravity="left"
					            	android:textSize="22sp"
					            	android:text="     Total: 59"
					            	android:background="@color/white"
				    	        	android:textColor="@color/darkGray"
			    	                />
		    	            
		    	            </LinearLayout>
		    	            
				        </RelativeLayout>
		    	        
		    	        <RelativeLayout
				            android:layout_width="0dp"
				            android:layout_height="fill_parent"
				            android:layout_weight="5" />
	    	        
	    	        </LinearLayout>
	    	        
	    	    </LinearLayout>
	    	        
    	        <View 
    	            android:layout_width="fill_parent"
		            android:layout_height="35sp"
		            android:background="@color/lightBackGray" />
    	    
    	    </LinearLayout>
    	    
   	    </ScrollView>
 
	</LinearLayout>
	
     <View 
            android:layout_width="match_parent"
     		android:layout_height="12sp"
     		android:background="@color/white"	/>
	 	
	 	<!--  BOTTOM MENU BAR LAYOUT  -->
 
		 <LinearLayout
		     android:layout_width="match_parent"
		     android:layout_height="40dp"
		     android:gravity="bottom"
		     android:background="@color/lightGray"
		     android:orientation="horizontal"
		     android:weightSum="3" >
     
		     <!--  HOME BUTTON  -->
		     
		     <Button
		        android:id="@+id/btnHomeBottom"
		        android:layout_width="10dp"
		        android:layout_height="40dp"
		        android:layout_weight="1"
		        android:gravity="center"
		        android:textStyle="bold"
		        android:textColor="@color/black"
		        android:background="@color/white"
		        android:textSize="20sp"
		        android:onClick="home"
		        android:text="Home" />
		     
		     <View
		   		 android:layout_height="40dp"
		   		 android:layout_width="1dp"
		   		 android:background="@color/black"/>
		     
		     <!--  SEARCH BUTTON  -->
		     
		     <Button
		        android:id="@+id/btnSearchBottom"
		        android:layout_width="10dp"
		        android:layout_height="40dp"
		        android:layout_weight="1"
		        android:gravity="center"
		        android:textStyle="bold"
		        android:textColor="@color/black"
		        android:background="@color/lightGray"
		        android:textSize="20sp"
		        android:onClick="search"
		        android:text="Search" />
		     
		     <View
		   		 android:layout_height="40dp"
		   		 android:layout_width="1dp"
		   		 android:background="@color/black"/>
		     
		     <!--  CHECKOUT BUTTON  -->
		     
		     <Button
		         android:id="@+id/btnReportsBottom"
		         android:layout_width="10dp"
		        android:layout_height="40dp"
		        android:layout_weight="1"
		        android:gravity="center"
		        android:textStyle="bold"
		        android:textColor="@color/black"
		        android:background="@color/lightGray"
		        android:textSize="20sp"
		        android:onClick="home"
		        android:text="Reports" />
      
 		</LinearLayout>
 
	</LinearLayout>

</LinearLayout>
