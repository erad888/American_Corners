<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="vertical" 
 android:layout_width="fill_parent"
 android:background="@color/white"
 android:layout_height="fill_parent">
 
    <!--  HEADER BAR LAYOUT  -->
    
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:orientation="horizontal"
        android:background="@color/lightGray" >
        
     <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

     <ImageView
         	android:id="@+id/imageLogo"
            android:layout_width="50sp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:src="@drawable/american_corner_logo_icon" />
     
        <TextView
            android:id="@+id/americanCornersText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="American Corners"
            android:textColor="@color/darkBlue"
            android:textSize="22sp"
            android:layout_toRightOf="@id/imageLogo"/>

        <Spinner
	        android:id="@+id/spinnerMenu"
	        android:layout_width="30sp"
	        android:layout_height="30sp"
	        android:layout_gravity="center"
	        android:text=""
	        android:layout_marginRight="15sp"
	        android:background="@drawable/menu_icon"
	        android:layout_alignParentRight="true"
	         />
        
        </RelativeLayout>

    </LinearLayout>
    
  <!--  WHITE HORIZONTAL BAR BELOW HEADER -->
    
    <View
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="@color/buttonGray"/>   

 	<View
	    android:layout_width="fill_parent"
	    android:layout_height="12dp"
	    android:background="@color/white"/>  

 <!--  Dashboard Layout  -->
 
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
     
     <LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="0dp"
	     android:layout_weight="12"
	     android:background="@color/lightBackGray"
	     android:orientation="vertical"
	     android:weightSum="100">
        
         <LinearLayout 
             android:layout_width="match_parent"
		     android:layout_height="0dp"
		     android:layout_weight="35">

	    	<ScrollView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">
				
	    	    <LinearLayout 
	    	        android:layout_width="fill_parent"
	    	        android:layout_height="fill_parent"
	    	        android:orientation="vertical">
				
		    	    <TextView 
		    	        android:layout_width="fill_parent"
	    	        	android:layout_height="wrap_content"
	    	        	android:text="Inventory Sync"
	    	        	android:textSize="25sp"
	    	        	android:layout_marginLeft="5sp"
					    android:textColor="@color/darkGray"
		    	        />
		    	    
		    	    <TextView
		    	        android:id="@+id/textInventoryLocation"
		    	        android:layout_width="fill_parent"
	    	        	android:layout_height="wrap_content"
	    	        	android:text="Successful sync completed. We thank you for your patience."
	    	        	android:textSize="22sp"
	    	        	android:layout_marginTop="20sp"
	    	        	android:layout_marginLeft="20sp"
					    android:textColor="@color/darkGray"
		    	        />
		    	    
		    	    <View
					    android:layout_width="fill_parent"
					    android:layout_height="1dp"
	    	        	android:layout_marginTop="20sp"
	    	        	android:layout_marginRight="10sp"
	    	        	android:layout_marginLeft="10sp"
					    android:background="@color/buttonGray"/>
		    	    
		    	    <TextView
		    	        android:id="@+id/textNumSuccess"
		    	        android:layout_width="fill_parent"
	    	        	android:layout_height="wrap_content"
	    	        	android:text="Items Successfully Synced: "
	    	        	android:textSize="22sp"
	    	        	android:layout_marginTop="20sp"
	    	        	android:layout_marginLeft="20sp"
					    android:textColor="@color/darkGray"
		    	        />
		    	    
		    	    <View
					    android:layout_width="fill_parent"
					    android:layout_height="1dp"
	    	        	android:layout_marginTop="20sp"
	    	        	android:layout_marginRight="10sp"
	    	        	android:layout_marginLeft="10sp"
					    android:background="@color/buttonGray"/>
		    	    
		    	    <TextView
		    	        android:id="@+id/textNumError"
		    	        android:layout_width="fill_parent"
	    	        	android:layout_height="wrap_content"
	    	        	android:text="Potential Data Errors Found: "
	    	        	android:textSize="22sp"
	    	        	android:gravity="left"
	    	        	android:layout_marginTop="30sp"
	    	        	android:layout_marginLeft="20sp"
	    	        	android:layout_marginRight="20sp"
	    	        	android:textColor="@color/darkGray" />
		    	    
		    	    <View
					    android:layout_width="fill_parent"
					    android:layout_height="1dp"
	    	        	android:layout_marginTop="20sp"
	    	        	android:layout_marginRight="10sp"
	    	        	android:layout_marginLeft="10sp"
					    android:background="@color/buttonGray"/>
	    	    
	    	    </LinearLayout>
	    	    
	   	    </ScrollView>
   	    
    	</LinearLayout>
    	
         <LinearLayout
             android:layout_width="match_parent"
		     android:layout_height="0dp"
		     android:layout_weight="65"
		     android:orientation="vertical">
	    	
             <View
				 android:layout_height="2sp"
				 android:layout_marginTop="12sp"
				 android:layout_width="fill_parent"
				 android:background="@color/buttonGray"/>
             
             <LinearLayout 
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent"
				android:orientation="horizontal"
				android:weightSum="120">
			    
				    <TextView
				        android:id="@+id/titleText"
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:text="Title"
						android:gravity="center"
				        android:layout_weight="20">
				    </TextView>
				    
				    <View
						 android:layout_height="fill_parent"
						 android:layout_width="2sp"
						 android:background="@color/buttonGray"/>
				    
				    <TextView
				        android:id="@+id/authorText"
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:text="Author"
				        android:gravity="center"
				        android:layout_weight="20">
				    </TextView>
				    
				    <View
						 android:layout_height="fill_parent"
						 android:layout_width="2sp"
						 android:background="@color/buttonGray"/>
				    
				    <TextView
				        android:id="@+id/dateText"
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:text="Date"
				        android:gravity="center"
				        android:layout_weight="20">
				    </TextView>
				    
				    <View
						 android:layout_height="fill_parent"
						 android:layout_width="2sp"
						 android:background="@color/buttonGray"/>
				    
				    <TextView
				        android:id="@+id/isbnText"
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:text="ISBN"
				        android:gravity="center"
				        android:layout_weight="20">
				    </TextView>
				    
				    <View
						 android:layout_height="fill_parent"
						 android:layout_width="2sp"
						 android:background="@color/buttonGray"/>
				    
				    <TextView
				        android:id="@+id/copiesText"
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:text="Copies"
				        android:gravity="center"
				        android:layout_weight="20">
				    </TextView>
				    
				    <View
						 android:layout_height="fill_parent"
						 android:layout_width="2sp"
						 android:background="@color/buttonGray"/>
				    
				    <TextView
				        android:id="@+id/tagText"
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:text="Tags"
				        android:gravity="center"
				        android:layout_weight="20">
				    </TextView>
			    
			    </LinearLayout>
			    
			    <View
					 android:layout_height="2sp"
					 android:layout_width="fill_parent"
					 android:background="@color/buttonGray"/>
             
             <ListView
				      android:id="@+id/errorlist_row"
				      android:layout_width="fill_parent"
				      android:layout_height="fill_parent">
				 </ListView>
             
         </LinearLayout>
 
	</LinearLayout>
	
     <View 
            android:layout_width="match_parent"
     		android:layout_height="12sp"
     		android:background="@color/white"	/>
	 	
	 	<!--  BOTTOM MENU BAR LAYOUT  -->
 
		 <LinearLayout
		     android:layout_width="match_parent"
		     android:layout_height="40dp"
		     android:gravity="bottom"
		     android:background="@color/lightGray"
		     android:orientation="horizontal"
		     android:weightSum="3" >
     
		     <!--  HOME BUTTON  -->
		     
		     <Button
		        android:id="@+id/btnHomeBottom"
		        android:layout_width="10dp"
		        android:layout_height="40dp"
		        android:layout_weight="1"
		        android:gravity="center"
		        android:textStyle="bold"
		        android:textColor="@color/black"
		        android:background="@color/lightGray"
		        android:textSize="20sp"
		        android:onClick="home"
		        android:text="Home" />
		     
		     <View
		   		 android:layout_height="40dp"
		   		 android:layout_width="1dp"
		   		 android:background="@color/black"/>
		     
		     <!--  SEARCH BUTTON  -->
		     
		     <Button
		        android:id="@+id/btnSearchBottom"
		        android:layout_width="10dp"
		        android:layout_height="40dp"
		        android:layout_weight="1"
		        android:gravity="center"
		        android:textStyle="bold"
		        android:textColor="@color/black"
		        android:background="@color/lightGray"
		        android:textSize="20sp"
		        android:onClick="search"
		        android:text="Search" />
		     
		     <View
		   		 android:layout_height="40dp"
		   		 android:layout_width="1dp"
		   		 android:background="@color/black"/>
		     
		     <!--  CHECKOUT BUTTON  -->
		     
		     <Button
		         android:id="@+id/btnReportsBottom"
		         android:layout_width="10dp"
		        android:layout_height="40dp"
		        android:layout_weight="1"
		        android:gravity="center"
		        android:textStyle="bold"
		        android:textColor="@color/black"
		        android:background="@color/lightGray"
		        android:textSize="20sp"
		        android:onClick="home"
		        android:text="Reports" />
      
 		</LinearLayout>
 
	</LinearLayout>

</LinearLayout>